				{
					"Position": {
						"X": 16,
						"Y": 9
					},
					"Layer": "Buildings",
					"Remove": true
				}
			]
		},
		{
			"LogName": "Troughs Right, Left, or Top",
			"Action": "EditMap",
			"Target": "Maps/SlimeHutch",
			"PatchMode": "Overlay",
			"FromFile": "assets/Water_{{WaterPosition}}.tmx",
			"FromArea": {
				"X": 0,
				"Y": 0,
				"Width": 27,
				"Height": 27
			},
			"ToArea": {
				"X": 0,
				"Y": 0,
				"Width": 27,
				"Height": 27
			},
			"When": {
				"WaterPosition |contains=Top, Right, Left, BottomRight, BottomLeft": "true"
			}
		},
		{
			"Action": "EditData",
			"Target": "Data/Locations",
			"When": {
				"EnableFishing": true
			},
