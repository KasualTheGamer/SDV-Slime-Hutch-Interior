{
	"Format": "2.7.0",
	"ConfigSchema": {
		"EnableFishing": {
			"AllowValues": "true, false",
			"Default": true
		},
		"NoSpoilers": {
			"AllowValues": "true, false",
			"Default": true
		},
		"WaterPosition": {
			"AllowValues": "Top, Right, Left, BottomRight, BottomLeft, None",
			"Default": "Top"
		}
	},
	"Changes": [
		{
			"Action": "Load",
			"Target": "Maps/SlimeHutch",
			"FromFile": "assets/SlimeHutch.tmx"
		},
		{
			"LogName": "Remove existing troughs",
			"Action": "EditMap",
			"Target": "Maps/SlimeHutch",
			"MapTiles": [
				{
					"Position": {
						"X": 16,
						"Y": 6
					},
					"Layer": "Buildings",
					"Remove": true
				},
				{
					"Position": {
						"X": 16,
						"Y": 7
					},
					"Layer": "Buildings",
					"Remove": true
				},
				{
